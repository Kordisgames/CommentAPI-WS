    "components": {
        "schemas": {
            "CommentResource": {
                "title": "Comment Resource",
                "description": "Comment resource schema",
                "required": [
                    "id",
                    "content",
                    "user_id",
                    "news_id"
                ],
                "properties": {
                    "id": {
                        "description": "Comment ID",
                        "type": "integer",
                        "example": 1
                    },
                    "content": {
                        "description": "Comment content",
                        "type": "string",
                        "example": "This is a great article!"
                    },
                    "user_id": {
                        "description": "Author ID",
                        "type": "integer",
                        "example": 1
                    },
                    "news_id": {
                        "description": "News ID",
                        "type": "integer",
                        "example": 1
                    },
                    "parent_id": {
                        "description": "Parent comment ID",
                        "type": "integer",
                        "example": null,
                        "nullable": true
                    },
                    "rating": {
                        "description": "Comment rating",
                        "type": "integer",
                        "example": 5
                    },
                    "is_approved": {
                        "description": "Approval status",
                        "type": "boolean",
                        "example": true
                    },
                    "created_at": {
                        "description": "Comment creation timestamp",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "Comment last update timestamp",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T12:00:00Z"
                    },
                    "user": {
                        "$ref": "#/components/schemas/UserResource"
                    },
                    "news": {
                        "$ref": "#/components/schemas/NewsResource"
                    },
                    "parent": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/CommentResource"
                            }
                        ],
                        "nullable": true,
                        "description": "Parent comment"
                    },
                    "replies": {
                        "description": "Comment replies",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CommentResource"
                        }
                    }
                },
                "type": "object"
            },
            "NewsResource": {
                "title": "News Resource",
                "description": "News resource schema",
                "required": [
                    "id",
                    "title",
                    "content",
                    "slug",
                    "user_id"
                ],
                "properties": {
                    "id": {
                        "description": "News ID",
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "description": "News title",
                        "type": "string",
                        "example": "Breaking News"
                    },
                    "content": {
                        "description": "News content",
                        "type": "string",
                        "example": "This is a breaking news article..."
                    },
                    "slug": {
                        "description": "News slug",
                        "type": "string",
                        "example": "breaking-news"
                    },
                    "user_id": {
                        "description": "Author ID",
                        "type": "integer",
                        "example": 1
                    },
                    "is_published": {
                        "description": "Publication status",
                        "type": "boolean",
                        "example": true
                    },
                    "published_at": {
                        "description": "Publication timestamp",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T12:00:00Z",
                        "nullable": true
                    },
                    "created_at": {
                        "description": "News creation timestamp",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "News last update timestamp",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T12:00:00Z"
                    },
                    "user": {
                        "$ref": "#/components/schemas/UserResource"
                    },
                    "comments": {
                        "description": "News comments",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CommentResource"
                        }
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "title": "User Resource",
                "description": "User resource schema",
                "required": [
                    "id",
                    "name",
                    "email"
                ],
                "properties": {
                    "id": {
                        "description": "User ID",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "User name",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "description": "User email",
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "email_verified_at": {
                        "description": "Email verification timestamp",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T12:00:00Z",
                        "nullable": true
                    },
                    "created_at": {
                        "description": "User creation timestamp",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "User last update timestamp",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T12:00:00Z"
                    },
                    "news": {
                        "description": "User's news",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/NewsResource"
                        }
                    },
                    "comments": {
                        "description": "User's comments",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CommentResource"
                        }
                    }
                },
                "type": "object"
            },
            "Comment": {
                "title": "Comment",
                "description": "Comment model",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "content": {
                        "type": "string"
                    },
                    "user_id": {
                        "type": "integer",
